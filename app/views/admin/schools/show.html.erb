<div class="school-detail-page">
  <div class="page-header">
    <div class="header-content">
      <div class="school-icon">
        <% if @school.type == 'elementary' %>
          <i class="fas fa-book-reader"></i>
        <% elsif @school.type == 'nursery' %>
          <i class="fas fa-baby"></i>
        <% else %>
          <i class="fas fa-school"></i>
        <% end %>
      </div>
      <div class="school-info">
        <h1 class="school-name"><%= @school.name %></h1>
        <% if @school.type.present? %>
          <span class="school-type <%= @school.type&.downcase %>">
            <%= { 'elementary' => 'École Élémentaire', 'nursery' => 'École Maternelle', 'primary' => 'École Primaire' }[@school.type] || 'École' %>
          </span>
        <% end %>
        <p class="school-address">
          <i class="fas fa-map-marker-alt"></i> <%= @school.address %>
        </p>
      </div>
    </div>
    
    <div class="action-buttons">
      <%= link_to "Retour aux écoles", schools_path, class: "btn btn-secondary" %>
      <% if current_user.admin? || (current_user.school? && current_user.schools.include?(@school)) %>
        <%= link_to "Modifier", edit_school_path(@school), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="school-stats">
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-chalkboard"></i></div>
      <div class="stat-value"><%= @school.class_count || 0 %></div>
      <div class="stat-label">Classes</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-users"></i></div>
      <div class="stat-value"><%= @school.student_count || 0 %></div>
      <div class="stat-label">Élèves</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-user-tie"></i></div>
      <div class="stat-value"><%= @school.teacher_count || 0 %></div>
      <div class="stat-label">Enseignants</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-calendar-check"></i></div>
      <div class="stat-value"><%= @upcoming_councils.count %></div>
      <div class="stat-label">Conseils à venir</div>
    </div>
  </div>

  <div class="content-sections">
    <div class="section">
      <div class="section-header">
        <h2><i class="fas fa-calendar-alt"></i> Prochains conseils d'école</h2>
        <% if current_user.admin? || (current_user.school? && current_user.schools.include?(@school)) %>
          <%= link_to "Nouveau conseil", new_council_path(school_id: @school.id), class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
      
      <% if @upcoming_councils.any? %>
        <div class="councils-grid">
          <% @upcoming_councils.each do |council| %>
            <div class="council-card">
              <div class="council-date">
                <div class="date-day"><%= council.date.strftime('%d') %></div>
                <div class="date-month"><%= council.date.strftime('%b') %></div>
              </div>
              <div class="council-details">
                <h3 class="council-title"><%= council.title %></h3>
                <p class="council-time">
                  <i class="far fa-clock"></i> 
                  <%= council.start_time %>
                  <% if council.end_time.present? %>
                    - <%= council.end_time %>
                  <% end %>
                </p>
                <% if council.location.present? %>
                  <p class="council-location">
                    <i class="fas fa-map-marker-alt"></i> <%= council.location %>
                  </p>
                <% end %>
              </div>
              <div class="council-actions">
                <%= link_to "Détails", council_path(council), class: "btn btn-outline" %>
                
                <% if current_user.official? %>
                  <% attendance = council.attendances.find_by(user_id: current_user.id) %>
                  <% if attendance %>
                    <% case attendance.status %>
                    <% when "pending" %>
                      <div class="attendance-actions">
                        <%= link_to "Confirmer", attendance_path(attendance, status: "confirmed"), method: :patch, class: "btn btn-success btn-sm" %>
                        <%= link_to "Décliner", attendance_path(attendance, status: "declined"), method: :patch, class: "btn btn-danger btn-sm" %>
                      </div>
                    <% when "confirmed" %>
                      <span class="attendance-badge confirmed">Confirmé</span>
                    <% when "declined" %>
                      <span class="attendance-badge declined">Décliné</span>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <i class="fas fa-calendar-times"></i>
          <p>Aucun conseil d'école planifié pour le moment.</p>
          <% if current_user.admin? || (current_user.school? && current_user.schools.include?(@school)) %>
            <%= link_to "Planifier un conseil", new_council_path(school_id: @school.id), class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="section">
      <div class="section-header">
        <h2><i class="fas fa-info-circle"></i> Informations</h2>
        <% if current_user.admin? || (current_user.school? && current_user.schools.include?(@school)) %>
          <%= link_to "Nouvelle information", new_information_path(school_id: @school.id), class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
      
      <% if @information.any? %>
        <div class="information-list">
          <% @information.limit(5).each do |info| %>
            <div class="information-item">
              <div class="info-header">
                <h4 class="info-title"><%= info.title %></h4>
                <span class="info-date"><%= info.created_at.strftime('%d/%m/%Y') %></span>
              </div>
              <p class="info-content"><%= truncate(info.content, length: 150) %></p>
              <%= link_to "Lire la suite", information_path(info), class: "info-link" %>
            </div>
          <% end %>
        </div>
        
        <% if @information.count > 5 %>
          <div class="view-more">
            <%= link_to "Voir toutes les informations (#{@information.count})", information_index_path(school_id: @school.id), class: "btn btn-outline" %>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <i class="fas fa-info-circle"></i>
          <p>Aucune information disponible pour cette école.</p>
          <% if current_user.admin? || (current_user.school? && current_user.schools.include?(@school)) %>
            <%= link_to "Ajouter une information", new_information_path(school_id: @school.id), class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @past_councils.any? %>
      <div class="section">
        <div class="section-header">
          <h2><i class="fas fa-history"></i> Conseils passés</h2>
        </div>
        
        <div class="past-councils-list">
          <% @past_councils.limit(5).each do |council| %>
            <div class="past-council-item">
              <div class="council-info">
                <h4><%= council.title %></h4>
                <p><%= council.date.strftime('%d/%m/%Y') %></p>
              </div>
              <div class="council-actions">
                <%= link_to "Voir", council_path(council), class: "btn btn-outline btn-sm" %>
                <% if current_user.official? %>
                  <% report = council.reports.find_by(user_id: current_user.id) %>
                  <% if report %>
                    <%= link_to "Mon rapport", report_path(report), class: "btn btn-primary btn-sm" %>
                  <% else %>
                    <%= link_to "Créer rapport", new_report_path(council_id: council.id), class: "btn btn-secondary btn-sm" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

