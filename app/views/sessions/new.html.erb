  <div class="login-container">
    <div class="login-tabs">
      <button class="tab-button active" data-tab="credentials">Connexion standard</button>
      <button class="tab-button" data-tab="schools">Connexion par école</button>
    </div>
    
    <div class="tab-content" id="credentials-tab" style="display: block;">
      <div class="login-form-container">
        <h2>Identification</h2>
        
        <% if flash[:alert] %>
          <div class="alert"><%= flash[:alert] %></div>
        <% end %>
        
        <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
        <% end %>
    
        <%= form_with url: login_path, method: :post, class: "login-form" do |form| %>
          <div class="field">
            <div class="field-icon">
              <i class="fas fa-user"></i>
            </div>
            <%= form.label :username, "Nom d'utilisateur" %>
            <%= form.text_field :username, value: params[:username], placeholder: "Votre identifiant...", autofocus: true %>
          </div>
    
          <div class="field">
            <div class="field-icon">
              <i class="fas fa-lock"></i>
            </div>
            <%= form.label :password, "Mot de passe" %>
            <%= form.password_field :password, placeholder: "Votre mot de passe..." %>
          </div>
    
          <div class="actions">
            <%= form.submit "Se connecter", class: "login-button" %>
          </div>
        <% end %>
        
        <div class="login-help">
          <p>Pour tout problème de connexion, veuillez contacter la Direction de l'Éducation au 03.83.85.XX.XX</p>
        </div>
      </div>
    </div>
    
