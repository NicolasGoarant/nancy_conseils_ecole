        <h2>Identification</h2>
        
        <% if flash[:alert] %>
          <div class="alert"><%= flash[:alert] %></div>
        <% end %>
        
        <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
        <% end %>
    
        <%= form_with url: login_path, method: :post, class: "login-form" do |form| %>
